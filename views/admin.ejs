<!DOCTYPE html>
<html>
<head>
    <title>Admin Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <script src="/socket.io/socket.io.js"></script>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #2c3e50;
            color: #ecf0f1;
            padding: 20px;
        }
        .container {
            max-width: 900px;
            margin: auto;
            background: #34495e;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }
        h1, h2 {
            text-align: center;
            color: #fff;
        }
        .raffle-control {
            background-color: #2c3e50;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        label {
            display: block;
            margin-bottom: 5px;
            color: #bdc3c7;
        }
        input, select {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #7f8c8d;
            background-color: #34495e;
            color: #ecf0f1;
            box-sizing: border-box;
        }
        button {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 5px;
            background-color: #e74c3c;
            color: white;
            font-size: 1.1em;
            cursor: pointer;
            transition: background-color 0.2s;
        }
        button:hover {
            background-color: #c0392b;
        }
        .pemenang-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        .pemenang-table th, .pemenang-table td {
            padding: 12px;
            border: 1px solid #7f8c8d;
            text-align: left;
        }
        .pemenang-table th {
            background-color: #2980b9;
        }
        .pemenang-table tr:nth-child(even) {
            background-color: #44607a;
        }
        .link-button {
            display: block;
            text-align: center;
            padding: 10px;
            background-color: #3498db;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            margin-top: 20px;
            font-size: 1.1em;
        }
        .link-button:hover {
            background-color: #2980b9;
        }
        #message {
            margin-top: 15px;
            padding: 10px;
            border-radius: 5px;
            text-align: center;
        }
        .error {
            background-color: #f39c12;
            color: white;
        }
        .success {
            background-color: #27ae60;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Admin Dashboard Undian</h1>
        <div class="raffle-control">
            <h2>Kontrol Undian</h2>
            <div class="form-group">
                <label for="prize-name">Nama Hadiah</label>
                <input type="text" id="prize-name" value="Hadiah Utama">
            </div>
            <div class="form-group">
                <label for="num-winners">Jumlah Pemenang</label>
                <input type="number" id="num-winners" value="1" min="1">
            </div>
            <div class="form-group">
                <label for="duration">Durasi Undian (ms)</label>
                <input type="number" id="duration" value="5000" min="1000">
            </div>
            <button id="start-draw">Mulai Undian</button>
            <div id="message"></div>
        </div>
        <a href="/admin/peserta" class="link-button">Kelola Data Peserta</a>
        <a href="/" class="link-button" target="_blank">Lihat Tampilan Undian</a>
        <hr>
        <h2>Daftar Pemenang</h2>
        <table class="pemenang-table">
            <thead>
                <tr>
                    <th>No. Undian</th>
                    <th>Nama</th>
                    <th>RT</th>
                    <th>Hadiah</th>
                </tr>
            </thead>
            <tbody>
                <% pemenang.forEach(p => { %>
                    <tr>
                        <td><%= p.no_undian %></td>
                        <td><%= p.nama %></td>
                        <td><%= p.rt %></td>
                        <td><%= p.hadiah %></td>
                    </tr>
                <% }) %>
                <% if (pemenang.length === 0) { %>
                    <tr>
                        <td colspan="4" style="text-align: center;">Belum ada pemenang yang diundi.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    <script>
        const socket = io();
        const startDrawBtn = document.getElementById('start-draw');
        const messageDiv = document.getElementById('message');
        startDrawBtn.addEventListener('click', () => {
            const prizeName = document.getElementById('prize-name').value;
            const numWinners = document.getElementById('num-winners').value;
            const duration = document.getElementById('duration').value;
            if (!prizeName || !numWinners || !duration) {
                showMessage('Harap isi semua field!', 'error');
                return;
            }
            socket.emit('startDraw', {
                prizeName: prizeName,
                numberOfWinners: numWinners,
                duration: parseInt(duration)
            });
            showMessage('Undian dimulai...', 'success');
        });
        socket.on('raffleError', (data) => {
            showMessage(data.message, 'error');
        });
        function showMessage(msg, type) {
            messageDiv.textContent = msg;
            messageDiv.className = type;
        }
    </script>
</body>
</html>